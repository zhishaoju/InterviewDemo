  <style name="RobotAnimationDialog" parent="@android:style/Theme.Translucent">
    <!-- 有无边框 -->
    <item name="android:windowFrame">@null</item>
    <!-- 是否浮现在activity之上 -->
    <item name="android:windowIsFloating">true</item>
    <!-- 是否透明 -->
    <item name="android:windowIsTranslucent">true</item>
    <!-- 模糊 -->
    <item name="android:backgroundDimEnabled">true</item>
    <!--无标题 -->
    <item name="android:windowNoTitle">true</item>

  </style>

  <style name="WheelDialog" parent="@android:style/Theme.Translucent">
    <!-- 有无边框 -->
    <item name="android:windowFrame">@null</item>
    <!-- 是否浮现在activity之上 -->
    <item name="android:windowIsFloating">true</item>
    <!-- 是否透明 -->
    <item name="android:windowIsTranslucent">true</item>
    <!-- 模糊 -->
    <item name="android:backgroundDimEnabled">true</item>
    <!--无标题 -->
    <item name="android:windowNoTitle">true</item>

  </style>

  // -------refreshListview-----

  <style name="refreshlistview_container">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="refreshlistview_arrow">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">25dp</item>
    <item name="android:src">@drawable/refreshlistview_arrow</item>
  </style>

  <style name="refreshlistview_progress">
    <item name="android:layout_width">20dp</item>
    <item name="android:layout_height">20dp</item>
    <item name="android:layout_centerVertical">true</item>
    <item name="android:layout_marginLeft">25dp</item>
  </style>

  <style name="refreshlistview_comment">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:textSize">14sp</item>
  </style>

  <style name="refreshlistview_date">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:textSize">12sp</item>
  </style>

  <style name="refreshlistview_header">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:padding">5dp</item>
  </style>
  // -------refreshListview-----

  <style name="TestStackTextViewStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:textSize">@dimen/font_20sp</item>
  </style>

  <declare-styleable name="CircleView">
    <attr format="color" name="roundColor"/>
    <attr format="color" name="roundProgressColor"/>
    <attr format="dimension" name="roundWidth"></attr>
    <attr format="color" name="textColor"/>
    <attr format="dimension" name="textSize"/>
    <attr format="integer" name="max"></attr>
    <attr format="boolean" name="textIsDisplayable"></attr>
    <attr name="style">
      <enum name="STROKE" value="0"></enum>
      <enum name="FILL" value="1"></enum>
    </attr>
  </declare-styleable>

  <style name="dialogstyle">
    <!--设置dialog的背景-->
    <item name="android:windowBackground">@android:color/transparent</item>
    <!--设置Dialog的windowFrame框为无-->
    <item name="android:windowFrame">@null</item>
    <!--设置无标题-->
    <item name="android:windowNoTitle">true</item>
    <!--是否浮现在activity之上-->
    <item name="android:windowIsFloating">true</item>
    <!--是否半透明-->
    <item name="android:windowIsTranslucent">true</item>
    <!--设置窗口内容不覆盖-->
    <item name="android:windowContentOverlay">@null</item>
    <!--设置动画，在这里使用让它继承系统的Animation.Dialog-->
    <item name="android:windowAnimationStyle">@android:style/Theme.Dialog</item>
    <!--背景是否模糊显示-->
    <item name="android:backgroundDimEnabled">true</item>
  </style>

  <style name="Android123" parent="android:style/Theme.Dialog">
           
    <item name="android:windowBackground">@drawable/dialog_bg</item>
     
  </style>

  <style name="Android124" parent="android:style/Theme.Dialog">
           
    <item name="android:windowBackground">@drawable/dialog_bg</item>
     <!--是否浮现在activity之上-->
    <item name="android:windowIsFloating">true</item>
    <!--是否半透明-->
    <item name="android:windowIsTranslucent">true</item>
  </style>

  <style name="LoadingDialog" parent="@android:style/Theme.Holo.Dialog.NoActionBar">
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:backgroundDimEnabled">false</item>
  </style>

</resources>
