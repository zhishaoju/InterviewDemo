<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_show_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_picture_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_picture_memory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/bt_sd_picture"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_48dp"
            android:text="加载sd卡图片" />

        <Button
            android:id="@+id/bt_hdpi_picture"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_48dp"
            android:text="加载hdpi卡图片" />

        <Button
            android:id="@+id/bt_mdpi_picture"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_48dp"
            android:text="加载mdpi卡图片" />

        <Button
            android:id="@+id/bt_xhdpi_picture"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_48dp"
            android:text="加载xhdpi卡图片" />

        <Button
            android:id="@+id/bt_xxhdpi_picture"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_48dp"
            android:text="加载xxhdpi卡图片" />

        <Button
            android:id="@+id/bt_xxxhdpi_picture"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_48dp"
            android:text="加载xxxhdpi卡图片" />
    </LinearLayout>
</ScrollView>